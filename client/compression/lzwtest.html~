<script type="text/javascript">
 $(document).ready(function() {
 var comp = new LZ77;
  $("#txtUncompressed").keypress(function() {
     $("#txtUncompressedSize").html( $("#txtUncompressed").val().length );
   });
  $("#cmdCompress").click(function() {
     var txtLZW = comp.compress( $("#txtUncompressed").val() );
     $("#txtCompressedSize").html( txtLZW.length + ':' + txtLZW );
   });
 });
</script>

